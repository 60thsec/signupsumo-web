<%= render 'shared/navbar' %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <div class="text-center">
        <%= image_tag 'icons/sumo-embelem-yellow@2x.png', height: '67px', width: '65px' %>
        <h1 style="margin: 30px 0 50px 0">Sign in</h1>
      </div>

      <div class="panel panel-default">
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class: 'form-control input-lg', placeholder: 'Your email' %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg', placeholder: '********' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="checkbox">
                <%= f.label :remember_me do %>
                  <%= f.check_box :remember_me %>
                  <%= t('devise.sessions.remember_me') %>
                <% end %>
              </div>
            <% end %>

            <%= f.submit "Sign in", class: 'btn btn-primary btn-lg btn-block', style: "margin-top: 24px" %>
          <% end %>

          <!-- <%= render "devise/shared/links" %> -->
        </div>
      </div>
    </div>
  </div>
</div>
