<style>
  html,
  body {
    background-color: #ffbd28
  }
</style>

<%= render 'shared/navbar' %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="text-center">
        <%= image_tag 'icons/sumo-embelem-yellow@2x.png', height: '67px', width: '65px' %>
        <h1 style="margin: 30px 0 50px 0">Sign up</h1>
      </div>

      <div class="panel panel-default">
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, class: 'form-control input-lg', placeholder: 'Your email' %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg', placeholder: 'Mash the keyboard' %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-lg', placeholder: 'Just to double check' %>
            </div>

            <%= f.submit "Come on in, the water's fine", class: 'btn btn-primary btn-lg btn-block', style: 'margin-top: 24px' %>
          <% end %>

          <!-- <%= render "devise/shared/links" %> -->
        </div>
      </div>
    </div>
  </div>
</div>
