<table class="mailer-card" bgcolor="#fff">
  <tbody>
    <tr class="header">
      <td>
        <%= link_to 'https://signupsumo.com' do %>
          <%= image_tag "icons/sumo-embelem-yellow@2x.png", size: '120' %>
        <% end %>
        <br>
        <br>
        <h2>SignupSumo</h2><br>
        There was a problem while processing your payment.<br>
        Please login to your account to <%= link_to 'update billing information', subscription_url(host: 'signupsumo.com') %>.<br>
